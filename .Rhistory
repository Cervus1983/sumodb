getwd()
source("sumodb.R")
install.packages("XML")
source("sumodb.R")
tournament <- apply(
expand.grid(
2017,
c("01", "03", "05", "07") # six tournaments a year
),
1,
paste, collapse = "."
)
sapply(
tournament,
function(x) write.csv(
sumodbBanzukeQuery(basho = x),
file = paste0("CSV/", x, ".banzuke.csv"),
quote = FALSE,
row.names = FALSE
)
)
sapply(
tournament,
function(x) write.csv(
sumodbBoutQuery(basho = x, division = "m"),
file = paste0("CSV/", x, ".results.csv"),
quote = FALSE,
row.names = FALSE
)
)
